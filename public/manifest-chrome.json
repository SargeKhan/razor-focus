{
  "manifest_version": 3,
  "name": "Block Site",
  "description": "Blocks access to distracting websites to improve your productivity.",
  "version": "7.0.1",
  "icons": {
    "32": "icon_32.png",
    "128": "icon_128.png"
  },
  "action": {
    "default_icon": {
      "32": "icon_32.png",
      "128": "icon_128.png"
    }
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "contextMenus",
    "activeTab"
  ],
  "content_security_policy": {
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.mjs",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.mjs"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_start"
    }
  ],
  "incognito": "split",
  "minimum_chrome_version": "92"
}